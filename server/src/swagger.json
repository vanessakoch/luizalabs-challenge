    "paths": {
        "/people": {
            "post": {
                "tags": ["People"],
                "summary": "Create people",
                "description": "Create new people",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "friends": {
                                        "type": "array"
                                    }
                                },
                                "example": {
                                    "name": "people name sample",
                                    "friends": [] 
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created0"
                    },
                    "500": {
                        "description": "People already exists"
                    }
                }
            },
            "get": {
                "tags": ["People"],
                "summary": "List all people",
                "description": "List all people",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "friends": {
                                                "type": "array"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}